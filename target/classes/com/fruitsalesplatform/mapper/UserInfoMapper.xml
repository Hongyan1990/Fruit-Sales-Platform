<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fruitsalesplatform.dao.UserInfoMapper">
	<resultMap type="com.fruitsalesplatform.po.UserInfo" id="userResultMap">
        <id column="_id" property="uid" />
        <result column="_name" property="uname" />
        <result column="_sex" property="usex" />
    </resultMap>
    <!-- 根据uid查询用户 -->
    
    <select id="selectUserById" parameterType="int" resultMap="userResultMap">
        select uid _id, uname _name, usex _sex from user where uid = #{uid}
    </select>
</mapper>